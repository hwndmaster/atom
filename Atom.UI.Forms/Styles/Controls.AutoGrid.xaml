<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Genius.Atom.UI.Forms">

    <Thickness x:Key="Genius.AutoGrid.Group.ItemMargin">10 0 0 0</Thickness>

    <Style x:Key="Genius.AutoGrid.Group.Title" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="0,0,0,3" />
    </Style>

    <DataTemplate DataType="{x:Type local:ValueGroupingField}">
        <StackPanel Orientation="Horizontal" Margin="{StaticResource Genius.AutoGrid.Group.ItemMargin}" VerticalAlignment="Center">
            <TextBlock Text="{Binding Path=Label}" />
            <TextBlock Text=" " />
            <TextBlock ToolTip="{Binding ToolTip}">
                <TextBlock.Text>
                    <MultiBinding Converter="{local:WrappingConverter}">
                        <Binding Path="Value" />
                        <Binding Path="Converter" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </StackPanel>
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:CommandGroupingField}">
        <StackPanel Orientation="Horizontal" Margin="{StaticResource Genius.AutoGrid.Group.ItemMargin}" VerticalAlignment="Center">
            <Button Content="{Binding Label}" Command="{Binding Command}" ToolTip="{Binding ToolTip}" />
        </StackPanel>
    </DataTemplate>

    <GroupStyle x:Key="Genius.AutoGrid.Group.GroupableViewModel">
        <GroupStyle.ContainerStyle>
            <Style TargetType="GroupItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type GroupItem}">
                            <Expander IsExpanded="{Binding Path=Name.IsExpanded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <Expander.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </Expander.Resources>
                                <Expander.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition SharedSizeGroup="GroupTitleSizeGroup" Width="Auto" />
                                            <ColumnDefinition SharedSizeGroup="ItemCountSizeGroup" Width="Auto" />
                                            <ColumnDefinition SharedSizeGroup="ExtraFieldsSizeGroup" Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Style="{StaticResource Genius.AutoGrid.Group.Title}" Text="{Binding Name.GroupTitle}" />
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <TextBlock Text=" Items: "/>
                                            <TextBlock Text="{Binding Name.ItemCount}" Visibility="{Binding Name.ItemCount, Converter={local:NotNullToVisibilityConverter}}" />
                                            <TextBlock Text="{Binding ItemCount}" Visibility="{Binding Name.ItemCount, Converter={local:InvertedNotNullToVisibilityConverter}}" />
                                        </StackPanel>
                                        <ItemsControl Grid.Column="2" ItemsSource="{Binding Name.ExtraGroupFields}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <ContentControl Content="{Binding .}" Focusable="False" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Expander.Header>
                                <ItemsPresenter />
                            </Expander>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </GroupStyle.ContainerStyle>
    </GroupStyle>

    <GroupStyle x:Key="Genius.AutoGrid.Group.String">
        <GroupStyle.ContainerStyle>
            <Style TargetType="GroupItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type GroupItem}">
                            <Expander IsExpanded="True">
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Style="{StaticResource Genius.AutoGrid.Group.Title}" Text="{Binding Name}" />
                                        <TextBlock Text=" ("/>
                                        <TextBlock Text="{Binding Path=ItemCount}"/>
                                        <TextBlock Text=")"/>
                                    </StackPanel>
                                </Expander.Header>
                                <ItemsPresenter />
                            </Expander>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </GroupStyle.ContainerStyle>
    </GroupStyle>

</ResourceDictionary>
